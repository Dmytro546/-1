#include <stdio.h>

int main() 
{
    double t1, t2, t3;
    scanf("%lf %lf %lf", &t1, &t2, &t3);
    double total_rate = (1.0 / t1) + (1.0 / t2) + (1.0 / t3);
    double T = 1.0 / total_rate;
    printf("%.2lf\n", T);
    return 0;
